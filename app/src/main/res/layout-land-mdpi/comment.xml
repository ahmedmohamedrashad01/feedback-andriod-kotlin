<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="775dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#23FFC107"
            android:paddingTop="5dp"
            android:text="Please enter your personal information to contact you"
            android:textAlignment="center"
            android:textColor="#157A8C"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/firstenglish" />

            <EditText
                android:id="@+id/txtCustomerName"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_radu"
                android:ems="10"
                android:hint="Enter Your Name"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="#06166C"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/txtPhoneNumber"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/text_radu"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textAlignment="center"
                android:textColor="#06166C"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCustomerName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#12FFC107"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="8">

            <CheckBox
                android:id="@+id/cbx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:buttonTint="#0376DA"
                android:onClick="onClick"

                android:padding="10dp"
                android:text="Hair Treatment"
                android:textAllCaps="false"
                android:textColor="#376389"
                android:textColorLink="#BD0606"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:buttonTint="#0376DA"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Facial"
                android:textAllCaps="false"
                android:textColor="#376389"
                android:textColorLink="#BD0606"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:buttonTint="#0376DA"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Manicure and Pedicure"
                android:textAllCaps="false"
                android:textColor="#376389"
                android:textColorLink="#BD0606"
                android:textSize="20sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:buttonTint="#0376DA"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="Massage"
                android:textAllCaps="false"
                android:textColor="#376389"
                android:textColorLink="#BD0606"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveNameAndPhoneNumber"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/button"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPhoneNumber" />

    </LinearLayout>
</ScrollView>